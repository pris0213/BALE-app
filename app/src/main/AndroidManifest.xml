<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app.bale">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- To send e-mails and access the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".data.DatabaseProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/battery">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/register"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.app.bale.LoginActivity" />
        </activity>
        <activity
            android:name=".ExaminadorMainActivity"
            android:label="@string/battery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecuperarSenhaActivity"
            android:label="@string/recuperar_senha"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".CadastroParticipanteActivity"
            android:label="@string/participante_label"
            android:parentActivityName=".ExaminadorMainActivity" />
        <activity
            android:name=".BateriaActivity"
            android:label="@string/bateria_tipopergunta_label"
            android:parentActivityName=".ExaminadorMainActivity" />
        <!-- SyncAdapter's dummy authentication service -->
        <service android:name=".sync.DataAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <activity
            android:name=".AdministradorMainActivity"
            android:label="@string/admin_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroExaminadorActivity"
            android:parentActivityName=".AdministradorMainActivity" />
        <activity
            android:name=".bale.HabitosLeituraEscritaActivity"
            android:label="@string/bateria_tipopergunta_habitos"
            android:parentActivityName=".BateriaActivity" />
        <activity
            android:name=".bale.CompreensaoFraseActivity"
            android:label="@string/bateria_tipopergunta_compfrases"
            android:parentActivityName=".BateriaActivity" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>